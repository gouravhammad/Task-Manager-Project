    <title>Task-Manager</title>   
    
    <link rel='icon' href='/background/logo.jpg' />
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/customCSS/login.css">
    <link rel="stylesheet" href="/customCSS/common.css"> 
  </head>

<body>
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#" style="color: #fed136;"><img src="/background/logo.svg" width="30" height="30" class="d-inline-block align-top" alt=""> Task-Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="login">Login</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="signup">Signup</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="about">About</a>
                    </li>
                </ul>
            </div>
    </nav> 
    
    <div class="container">
        <br><br><br>
        <form action="verifyForgotPassword" method="POST" class="text-center form-signin shadow-lg p-3 bg-white rounded">
            <h1 class="h1 mb-3 font-weight-normal" style="font-family: 'Kaushan Script';">Forgot Password</h1>
            <p class="text-justify mt-4 mb-4 text-center font-weight-bold">Your Password will be send to your Registered Email on click of Submit</p>
            <input type="email" name="userEmail" placeholder="@email" value='<%=email%>' class="form-control shadow bg-white rounded" />
            <span class="text-center small"><%=error%></span>

            <button class="btn mt-2 btn-lg btn-success btn-block" type="submit">Verify</button>

            <p class="mt-3 mb-2 text-muted">&copy; 2019</p>
          </form>  
    </div>
   
     
    <footer class="py-4  mt-3 bg-dark">
        <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; Task Manager 2019</p>
        </div>
    </footer>
    
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
